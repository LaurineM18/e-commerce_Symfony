<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
       <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css">
    </head>
    <body>
    {% include "menu.html.twig" %}
        <div class="container">
            <section class="row" >
                <nav class="col-2">
                    <h2 class="fs-5 my-3">Gestion des produits</h2>
                    <div class="list-group">
                        <a href="{{ path("app_produit_new") }}" class="list-group-item list-group-item-action">Ajouter un produit</a>
                        <a href="{{ path("app_produit_index") }}" class="list-group-item list-group-item-action">Liste des produits</a>
                    </div>
                    <h2 class="fs-5 my-3">Gestion des membres</h2>
                    <div class="list-group">
                        <a href="{{ path("app_membre_new") }}" class="list-group-item list-group-item-action">Ajouter un membre</a>
                        <a href="{{ path("app_membre_index") }}" class="list-group-item list-group-item-action">Liste des membres</a>
                    </div>
                    <h2 class="fs-5 my-3">Gestion des commandes</h2>
                    <div class="list-group">
                        <a href="{{ path("app_commande_new") }}" class="list-group-item list-group-item-action">Ajouter une commande</a>
                        <a href="{{ path("app_commande_index") }}" class="list-group-item list-group-item-action">Liste des commandes</a>
                    </div>
                    <h2 class="fs-5 my-3">Gestion des messages</h2>
                    <div class="list-group">
                        <a href="{{ path("app_contact_index") }}" class="list-group-item list-group-item-action">Liste des messages reçus</a>
                    </div>
                </nav>
                <div class="col-10">
                    {% block body %}{% endblock %}
                </div>
            </section>
        </div>
    </body>
</html>