{% extends 'base.html.twig' %}

{% block title %}Commande{% endblock %}

{% block body %}
    <h1>Commande</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ commande.id }}</td>
            </tr>
            <tr>
                <th>Acheteur</th>
                <td>{{ commande.membre.prenom }}</td>
            </tr>
            <tr>
                <th>Produits</th>
                <td>{{ commande.produit.titre }} <img src="/upload/{{commande.produit.photo}}" alt="" width="150"></td>
                <td></td>
            </tr>
            <tr>
                <th>Quantité</th>
                <td>{{ commande.quantite }}</td>
            </tr>
            <tr>
                <th>Montant</th>
                <td>{{ commande.montant }} €</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ commande.etat }}</td>
            </tr>
            <tr>
                <th>Date_enregistrement</th>
                <td>{{ commande.dateEnregistrement ? commande.dateEnregistrement|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_commande_index') }}" class="btn btn-outline-info">Retour à la liste</a>

    <a href="{{ path('app_commande_edit', {'id': commande.id}) }}" class="btn btn-outline-info">Editer</a>

    {{ include('commande/_delete_form.html.twig') }}
{% endblock %}
